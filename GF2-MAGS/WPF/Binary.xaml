<Page x:Class="WPF.Binary"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Binær Kodeomformer">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <TextBlock Text="Binær til Decimal" FontSize="16" Margin="0,0,0,10"/>
                
                <TextBlock Text="Indtast fire 8-bit binære tal adskilt af punktummer (f.eks. 10101010.11001100.11110000.00001111)" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,5"/>
                <TextBox Name="BinaryInput" Width="440" Height="30" Margin="0,0,0,10"/>
                <Button Content="Konverter til Decimal" Click="ConvertToDecimal_Click" Width="200" Height="30" Margin="0,0,0,10"/>
                <TextBlock Name="DecimalOutput" FontSize="14" Margin="0,0,0,20"/>

                
                <TextBlock Text="Decimal til Binær" FontSize="16" Margin="0,20,0,10"/>
                
                <TextBlock Text="Indtast fire decimaltal mellem 0 og 255 adskilt af punktummer (f.eks. 192.168.0.1)" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,5"/>
                <TextBox Name="DecimalInput" Width="440" Height="30" Margin="0,0,0,10"/>
                <Button Content="Konverter til Binær" Click="ConvertToBinary_Click" Width="200" Height="30" Margin="0,0,0,10"/>
                <TextBlock Name="BinaryOutput" FontSize="14"/>

                
                <Button Content="Åbn Notion Link" Click="NotionButton_Click" Width="200" Height="30" Margin="0,20,0,10"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>