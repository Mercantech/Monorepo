@page "/icon-test"

<PageTitle>Icon Test - VacationStay</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-check2-circle text-success me-2"></i>Bootstrap Icons Test</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Status Icons</h5>
                            <p><i class="bi bi-heart-pulse text-success me-2"></i>Heart Pulse (Success)</p>
                            <p><i class="bi bi-database text-warning me-2"></i>Database (Warning)</p>
                            <p><i class="bi bi-exclamation-triangle text-danger me-2"></i>Exclamation (Danger)</p>
                            <p><i class="bi bi-info-circle text-info me-2"></i>Info Circle (Info)</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Navigation Icons</h5>
                            <p><i class="bi bi-geo-alt-fill text-primary me-2"></i>Location</p>
                            <p><i class="bi bi-person-circle text-secondary me-2"></i>Person</p>
                            <p><i class="bi bi-box-arrow-in-right text-primary me-2"></i>Login</p>
                            <p><i class="bi bi-search text-dark me-2"></i>Search</p>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Weather Icons</h5>
                            <p><i class="bi bi-cloud-sun-fill text-warning me-2"></i>Cloud Sun</p>
                            <p><i class="bi bi-sun-fill text-warning me-2"></i>Sun</p>
                            <p><i class="bi bi-cloud-rain-fill text-primary me-2"></i>Rain</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Action Icons</h5>
                            <p><i class="bi bi-airplane-fill text-primary me-2"></i>Airplane</p>
                            <p><i class="bi bi-building text-secondary me-2"></i>Building</p>
                            <p><i class="bi bi-calculator text-dark me-2"></i>Calculator</p>
                        </div>
                    </div>
                    
                    <div class="alert alert-info mt-4">
                        <i class="bi bi-info-circle me-2"></i>
                        Hvis du kan se alle ikoner ovenfor, virker Bootstrap Icons korrekt!
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
