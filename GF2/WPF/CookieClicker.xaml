<Page x:Class="WPF.CookieClicker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CookieClicker">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <!-- Perfect Cookie Image -->
            <Viewbox Stretch="Uniform" Width="200" Height="200">
                <Image Source="https://gf2.mercantec.tech/PerfectCookie.png"/>
            </Viewbox>

            <!-- Notion Link Button -->
            <Button Click="NotionButton_Click" Background="Transparent" BorderThickness="0">
                <Viewbox Stretch="Uniform" Width="100" Height="100">
                    <Image Source="https://gf2.mercantec.tech/Notion.png"/>
                </Viewbox>
            </Button>
        </StackPanel>
    </Grid>
</Page>